                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2.4*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Project" Grid.Row="0" Grid.Column="0" FontSize="16" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryGray}" VerticalOptions="CenterAndExpand" />
                            <Label Text="Category" Grid.Row="1" Grid.Column="0" FontSize="16" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryGray}" VerticalOptions="CenterAndExpand" />
                            <local:CustomPicker HeightRequest="35"  x:Name="ProjectPicker1" BackgroundColor="WhiteSmoke" VerticalOptions="CenterAndExpand" TextColor="{StaticResource PrimaryColor}" SelectedIndexChanged="PickerProject_SelectedIndexChanged1" ItemDisplayBinding="{Binding projectName}" Title="Select Project" Grid.Row="0" Grid.Column="1">
                            </local:CustomPicker>
                            <local:CustomPicker HeightRequest="35"  x:Name="CategoryPicker1" BackgroundColor="WhiteSmoke" Title="Select Expense Category" TextColor="{StaticResource PrimaryColor}" VerticalOptions="CenterAndExpand" SelectedIndexChanged="PickerCategory_SelectedIndexChanged1" ItemDisplayBinding="{Binding categoryName}" Grid.Row="1" Grid.Column="1">
                            </local:CustomPicker>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2.4*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Amount" FontSize="16" TextColor="{StaticResource PrimaryGray}" Grid.Row="0" Grid.Column="0" VerticalOptions="CenterAndExpand" FontFamily="{StaticResource NormalFont}" />
                            <local:CustomEntry x:Name="amtEntry1" BackgroundColor="WhiteSmoke" Keyboard="Numeric" Placeholder="Enter Amount" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryColor}" VerticalOptions="CenterAndExpand" Grid.Row="0" Grid.Column="1" FontSize="16">
                                <Entry.Behaviors>
                                    <local:EntryLengthValidatorBehavior MaxLength="10" />
                                </Entry.Behaviors>
                            </local:CustomEntry>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2.4*" />
                            </Grid.ColumnDefinitions>
                            <StackLayout Orientation="Horizontal" Grid.Column="0" VerticalOptions="CenterAndExpand">
                                <Image Source="ic_small_calendar" IsVisible="false">
                                </Image>
                                <Label Text="Expense Date" Grid.Column="0" VerticalTextAlignment="Center" FontSize="16" TextColor="{StaticResource PrimaryGray}">
                                </Label>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                                <Image Source="ic_left_arrow" IsVisible="false">
                                </Image>
                                <local:BorderlessDatePicker x:Name="datePickerAndroid1" HeightRequest="35" BackgroundColor="WhiteSmoke" HorizontalOptions="FillAndExpand" Grid.Column="1" VerticalOptions="CenterAndExpand" DateSelected="Handle_DateSelected1" Date="{x:Static sys:DateTime.Now}" MaximumDate="{x:Static sys:DateTime.Now}">
                                    <DatePicker.Format>yyyy-MM-dd</DatePicker.Format>
                                </local:BorderlessDatePicker>
                                <DatePicker x:Name="datePickerIos1" IsVisible="false" HorizontalOptions="FillAndExpand" BackgroundColor="WhiteSmoke" Grid.Column="1" TextColor="{StaticResource PrimaryColor}" VerticalOptions="CenterAndExpand"  DateSelected="Handle_DateSelected1" Date="{x:Static sys:DateTime.Now}" MaximumDate="{x:Static sys:DateTime.Now}">
                                    <DatePicker.Format>yyyy-MM-dd</DatePicker.Format>
                                </DatePicker>
                                <Image Source="ic_keyboard_arrow_down_black" IsVisible="false" Margin="0,5,0,0" VerticalOptions="CenterAndExpand">
                                </Image>
                            </StackLayout>
                        </Grid>
                        <Grid>

                            <Grid.RowDefinitions>

                                <RowDefinition Height="40" />

                                <RowDefinition Height="100" />

                            </Grid.RowDefinitions> 

                            <Label Text="Details" FontSize="16" TextColor="{StaticResource PrimaryGray}" Grid.Row="0"
                                   Grid.Column="0" VerticalOptions="CenterAndExpand" FontFamily="{StaticResource NormalFont}"/>

                           <local:CustomEditor  x:Name="detailEntry1" HeightRequest="100" BackgroundColor="WhiteSmoke"
                                               FontFamily="{StaticResource NormalFont}" Grid.Row="1" Grid.Column="0"
                                               FontSize="18" TextColor="{StaticResource PrimaryColor}">

                            </local:CustomEditor>
                  

                    </Grid>
                    </StackLayout>
