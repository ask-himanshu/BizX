<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bizx.views.expenseEmployee.DraftExpensePage"
             xmlns:local="clr-namespace:bizx.customViews"
              
             NavigationPage.HasNavigationBar="False"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             
             BackgroundColor="White">

    
    <ContentPage.Content>

        <StackLayout Orientation="Vertical">
            <StackLayout x:Name="header" BackgroundColor="{StaticResource BackgroundColor}" HeightRequest="50" HorizontalOptions="FillAndExpand" Orientation="Horizontal" VerticalOptions="Center">
                <Grid Margin="5" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                    </Grid.RowDefinitions>
                    <StackLayout Grid.Column="0" >
                      <Image Source="ic_arrow_back_white.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                       
                    </Image>  
                         <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Back_Click" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    <Label x:Name="titleLbl" Text="Claim Expense" Grid.Column="1" Margin="20,0,0,0" FontFamily="{StaticResource NormalFont}" FontSize="22" TextColor="White" VerticalOptions="Center" />
                </Grid>
            </StackLayout>
            <BoxView HeightRequest="1" BackgroundColor="White" />
            <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <StackLayout Orientation="Vertical" Margin="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2.4*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="Expense No" Grid.Row="0" Grid.Column="0" FontSize="16" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryGray}" VerticalOptions="Center" />
                        <Label Text="BU" Grid.Row="1" Grid.Column="0" FontSize="16" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryGray}" VerticalOptions="Center" />
                        <Label Text="SBU" Grid.Row="2" Grid.Column="0" FontSize="16" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryGray}" VerticalOptions="Center" />
                        <Label x:Name="buLbl" Grid.Row="1" VerticalTextAlignment="Center" Grid.Column="1" TextColor="{StaticResource PrimaryColor}" FontSize="16" IsVisible="true" />
                        <Label x:Name="sbuLbl" Grid.Row="2" TextColor="{StaticResource PrimaryColor}" Grid.Column="1" VerticalTextAlignment="Center" FontSize="16" IsVisible="true" />
                        <Label x:Name="expenseId" Grid.Row="0" TextColor="{StaticResource PrimaryColor}" Grid.Column="1" VerticalTextAlignment="Center" FontSize="16" IsVisible="true" />
                    </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2.4*" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                            <Label Text="Client/Dept"  FontSize="16" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryGray}" VerticalOptions="CenterAndExpand" />

                            <Label Text="*" VerticalOptions="CenterAndExpand" FontSize="15" TextColor="{StaticResource HighlightErrorColor}" Grid.Row="2" Grid.Column="0" FontFamily="{StaticResource NormalFont}" />

                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                            <Label Text="Claim Type"  FontSize="16" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryGray}" VerticalOptions="CenterAndExpand" />

                            <Label Text="*" VerticalOptions="CenterAndExpand" FontSize="15" TextColor="{StaticResource HighlightErrorColor}" Grid.Row="2" Grid.Column="0" FontFamily="{StaticResource NormalFont}" />

                        </StackLayout>
                        <StackLayout Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                            <Label Text="Billability"  FontSize="16" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryGray}" VerticalOptions="CenterAndExpand" />

                            <Label Text="*" VerticalOptions="CenterAndExpand" FontSize="15" TextColor="{StaticResource HighlightErrorColor}" Grid.Row="2" Grid.Column="0" FontFamily="{StaticResource NormalFont}" />

                        </StackLayout>
                        <StackLayout Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
                            <Label Text="Currency" FontSize="16" TextColor="{StaticResource PrimaryGray}"  VerticalOptions="CenterAndExpand" FontFamily="{StaticResource NormalFont}" />

                            <Label Text="*" VerticalOptions="CenterAndExpand" FontSize="15" TextColor="{StaticResource HighlightErrorColor}" Grid.Row="2" Grid.Column="0" FontFamily="{StaticResource NormalFont}" />

                        </StackLayout>
                        <Label Text="Currency" FontSize="16" TextColor="{StaticResource PrimaryGray}" Grid.Row="3" Grid.Column="0" VerticalOptions="CenterAndExpand" FontFamily="{StaticResource NormalFont}" />
                        <local:CustomPicker HeightRequest="35"  x:Name="ClientPicker" BackgroundColor="WhiteSmoke" VerticalOptions="CenterAndExpand" TextColor="{StaticResource PrimaryColor}" SelectedIndexChanged="PickerClient_SelectedIndexChanged" ItemDisplayBinding="{Binding clientName}" Title="Select Client" Grid.Row="0" Grid.Column="1">
                        </local:CustomPicker>
                        <local:CustomPicker HeightRequest="35"  x:Name="ClaimPicker" BackgroundColor="WhiteSmoke" Title="Select Claim Type" TextColor="{StaticResource PrimaryColor}" VerticalOptions="CenterAndExpand" SelectedIndexChanged="PickerClaim_SelectedIndexChanged" Grid.Row="1" Grid.Column="1">
                            <local:CustomPicker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Corporate Card Settlement</x:String>
                                    <x:String>Expense claim</x:String>
                                </x:Array>
                            </local:CustomPicker.ItemsSource>
                        </local:CustomPicker>
                        <local:CustomPicker HeightRequest="35"  x:Name="BillabilityPicker" BackgroundColor="WhiteSmoke" VerticalOptions="CenterAndExpand" TextColor="{StaticResource PrimaryColor}" Title="Select Billability" Grid.Row="2" SelectedIndexChanged="PickerBillability_SelectedIndexChanged" Grid.Column="1">
                            <local:CustomPicker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Billable</x:String>
                                    <x:String>Non Billable</x:String>
                                </x:Array>
                            </local:CustomPicker.ItemsSource>
                        </local:CustomPicker>
                        <local:CustomPicker HeightRequest="35"  x:Name="currencyType" BackgroundColor="WhiteSmoke" Title="Select Currency" ItemDisplayBinding="{Binding attributeElementName}" TextColor="{StaticResource PrimaryColor}" Grid.Column="1" SelectedIndexChanged="CurrencyType_SelectedIndexChanged" Grid.Row="3" VerticalOptions="CenterAndExpand" />
                    </Grid>
                    <StackLayout x:Name="bill1" Orientation="Vertical">
                        <Grid BackgroundColor="{StaticResource Button}" Margin="0,7,0,7" Padding="5" HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Bill #1" TextColor="White" HorizontalOptions="StartAndExpand" FontFamily="{StaticResource NormalFont}" FontSize="16" Grid.Column="0" VerticalOptions="Center" />
                            <Label Text="ADD" TextColor="White" HorizontalOptions="EndAndExpand" FontFamily="{StaticResource NormalFont}" FontSize="16" Grid.Column="1" VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Handle_Add_Click" NumberOfTapsRequired="1" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2.4*" />
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                <Label Text="Project"  FontSize="16" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryGray}" VerticalOptions="CenterAndExpand" />

                                <Label Text="*" VerticalOptions="CenterAndExpand" FontSize="15" TextColor="{StaticResource HighlightErrorColor}" Grid.Row="2" Grid.Column="0" FontFamily="{StaticResource NormalFont}" />

                            </StackLayout>
                            <StackLayout Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                                <Label Text="Category" LineBreakMode="TailTruncation"   FontSize="16" FontFamily="{StaticResource NormalFont}" TextColor="{StaticResource PrimaryGray}" VerticalOptions="CenterAndExpand" />

                                <Label Text="*" VerticalOptions="CenterAndExpand" FontSize="15" TextColor="{StaticResource HighlightErrorColor}" Grid.Row="2" Grid.Column="0" FontFamily="{StaticResource NormalFont}" />

                            </StackLayout>
                            <local:CustomPicker HeightRequest="35"  x:Name="ProjectPicker" BackgroundColor="WhiteSmoke" VerticalOptions="CenterAndExpand" TextColor="{StaticResource PrimaryColor}" SelectedIndexChanged="PickerProject_SelectedIndexChanged" ItemDisplayBinding="{Binding projectName}" Title="Select Project" Grid.Row="0" Grid.Column="1">
                            </local:CustomPicker>
                            <local:CustomPicker HeightRequest="35"  x:Name="CategoryPicker" BackgroundColor="WhiteSmoke" Title="Select Expense Category" TextColor="{StaticResource PrimaryColor}" VerticalOptions="CenterAndExpand" SelectedIndexChanged="PickerCategory_SelectedIndexChanged" ItemDisplayBinding="{Binding categoryName}" Grid.Row="1" Grid.Column="1">
                            </local:CustomPicker>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2.4*" />
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                <Label Text="Amount" FontSize="16" TextColor="{StaticResource PrimaryGray}"  VerticalOptions="CenterAndExpand" FontFamily="{StaticResource NormalFont}" />

                                <Label Text="*" VerticalOptions="CenterAndExpand" FontSize="15" TextColor="{StaticResource HighlightErrorColor}" Grid.Row="2" Grid.Column="0" FontFamily="{StaticResource NormalFont}" />

                            </StackLayout>
                            <local:CustomEntry x:Name="amtEntry" Keyboard="Numeric" BackgroundColor="WhiteSmoke"
                                               Placeholder="Enter Amount" FontFamily="{StaticResource NormalFont}"
                                               TextColor="{StaticResource PrimaryColor}" VerticalOptions="CenterAndExpand"
                                               Grid.Row="0" Grid.Column="1" FontSize="16">
                                <Entry.Behaviors>
                                    <local:EntryLengthValidatorBehavior MaxLength="10" />
                                </Entry.Behaviors>
                            </local:CustomEntry>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2.4*" />
                            </Grid.ColumnDefinitions>
                            <StackLayout Orientation="Horizontal" Grid.Column="0" VerticalOptions="CenterAndExpand">
                                <Image Source="ic_small_calendar" IsVisible="false">
                                </Image>
                                <Label Text="Expense Date" Grid.Column="0" VerticalTextAlignment="Center" FontSize="16" TextColor="{StaticResource PrimaryGray}">
                                </Label>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                                <Image Source="ic_left_arrow" IsVisible="false">
                                </Image>
                                <local:BorderlessDatePicker x:Name="datePickerAndroid" BackgroundColor="WhiteSmoke" HeightRequest="35" HorizontalOptions="FillAndExpand" Grid.Column="1" VerticalOptions="CenterAndExpand" DateSelected="Handle_DateSelected" Date="{x:Static sys:DateTime.Now}" MaximumDate="{x:Static sys:DateTime.Now}">
                                    <DatePicker.Format>yyyy-MM-dd</DatePicker.Format>
                                </local:BorderlessDatePicker>
                                <DatePicker x:Name="datePickerIos" IsVisible="false" Grid.Column="1" BackgroundColor="WhiteSmoke" HorizontalOptions="FillAndExpand" TextColor="{StaticResource PrimaryColor}" VerticalOptions="CenterAndExpand" DateSelected="Handle_DateSelected" Date="{x:Static sys:DateTime.Now}" MaximumDate="{x:Static sys:DateTime.Now}">
                                    <DatePicker.Format>yyyy-MM-dd</DatePicker.Format>
                                </DatePicker>
                                <Image Source="ic_keyboard_arrow_down_black" IsVisible="false" Margin="0,5,0,0" VerticalOptions="CenterAndExpand">
                                </Image>
                            </StackLayout>
                        </Grid>
                    

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>
                        <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                <Label Text="Details" FontSize="16" TextColor="{StaticResource PrimaryGray}"  VerticalOptions="CenterAndExpand" FontFamily="{StaticResource NormalFont}" />

                                <Label Text="*" VerticalOptions="CenterAndExpand" FontSize="15" TextColor="{StaticResource HighlightErrorColor}" Grid.Row="2" Grid.Column="0" FontFamily="{StaticResource NormalFont}" />

                            </StackLayout>
                        <local:CustomEditor  x:Name="detailEntry" HeightRequest="100" BackgroundColor="WhiteSmoke" BorderColor="WhiteSmoke" FontFamily="{StaticResource NormalFont}" Grid.Row="1" Grid.Column="0" FontSize="16" TextColor="{StaticResource PrimaryColor}">
                            
                        </local:CustomEditor>
                    </Grid>
                    </StackLayout>
                    <!-- bill1 ends -->
                    <!--        biil2   starts             -->
