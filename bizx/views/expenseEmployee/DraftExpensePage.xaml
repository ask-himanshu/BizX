                                <ColumnDefinition Width="2.4*" />
                            </Grid.ColumnDefinitions>
                            <StackLayout Orientation="Horizontal" Grid.Column="0" VerticalOptions="CenterAndExpand">
                                <Image Source="ic_small_calendar" IsVisible="false">
                                </Image>
                                <Label Text="Expense Date" Grid.Column="0" VerticalTextAlignment="Center" FontSize="16" TextColor="{StaticResource PrimaryGray}">
                                </Label>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                                <Image Source="ic_left_arrow" IsVisible="false">
                                </Image>
                                <local:BorderlessDatePicker x:Name="datePickerAndroid2" BackgroundColor="WhiteSmoke" HeightRequest="35" HorizontalOptions="FillAndExpand"  Grid.Column="1" VerticalOptions="CenterAndExpand" DateSelected="Handle_DateSelected2" Date="{x:Static sys:DateTime.Now}" MaximumDate="{x:Static sys:DateTime.Now}">
                                    <DatePicker.Format>yyyy-MM-dd</DatePicker.Format>
                                </local:BorderlessDatePicker>
                                <DatePicker x:Name="datePickerIos2" IsVisible="false" BackgroundColor="WhiteSmoke" HorizontalOptions="FillAndExpand" Grid.Column="1" TextColor="{StaticResource PrimaryColor}" VerticalOptions="CenterAndExpand"  DateSelected="Handle_DateSelected2" Date="{x:Static sys:DateTime.Now}" MaximumDate="{x:Static sys:DateTime.Now}">
                                    <DatePicker.Format>yyyy-MM-dd</DatePicker.Format>
