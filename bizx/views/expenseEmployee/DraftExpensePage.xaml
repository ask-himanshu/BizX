                                <ColumnDefinition Width="2.4*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Project" Grid.Row="0" Grid.Column="0" FontSize="16" FontFamily="{StaticResource NormalFont}"
                                   TextColor="{StaticResource PrimaryGray}" VerticalOptions="CenterAndExpand" />
